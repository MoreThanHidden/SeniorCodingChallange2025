@page
@model SeniorCodingChallange2025.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @Html.AntiForgeryToken()
            <h4>Use a local account to log in.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="Input_Username">Username</label>
                <input asp-for="Input.Username" class="form-control" id="Input_Username" name="Input.Username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Input_Password">Password</label>
                <input asp-for="Input.Password" class="form-control" id="Input_Password" name="Input.Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Log in</button>
        </form>
    </div>
    <div class="col-md-8">
        <h4>Default Users for Testing</h4>
        <ul>
            <li><b>Clerk:</b> clerk1 / Password123!</li>
            <li><b>Administrator:</b> admin1 / Password123!</li>
            <li><b>Doctor:</b> doctor1 / Password123!</li>
            <li><b>Nurse:</b> nurse1 / Password123!</li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
